{
    "name": "chrome-extension-automation",
    "version": "1.0.0",
    "dependencies": {
        "jest": "^29.7.0",
        "puppeteer": "^24.4.0",
        "puppeteer-firefox": "^0.5.1"
    },
    "scripts": {
        "test": "cp src/manifest.dev.json src/manifest.json && echo 'Testing in DEVO' && jest ./tests/index.test.js",
        "test:firefox": "web-ext run --source-dir src/ --start-url \"about:debugging\" --pref \"devtools.chrome.enabled=true\" --pref \"devtools.debugger.remote-enabled=true\" --verbose --devtools --arg=\"--remote-debugging-port=9222\"",
        "test:firefox:run": "jest ./tests/index-firefox.test.js",
        "debug": "node --inspect-brk node_modules/jest/bin/jest.js",
        "build:prod": "cp src/manifest.prod.json src/manifest.json && echo 'Build for PROD'",
        "build:firefox": "cp src/manifest-firefox.json src/manifest.json && echo 'Build for Firefox'",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "eslint": "^9.23.0",
        "globals": "^16.0.0",
        "web-ext": "^8.10.0"
    }
}

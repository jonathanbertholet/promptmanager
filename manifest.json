{
    "manifest_version": 3,
    "name": "Open Prompt Manager - ChatGPT, Claude, Gemini, NotebookLM, Deepseek, Poe",
    "version": "1.8.5",
    "description": "The best prompt manager for LLMs. Fully Open Source.",
    "permissions": ["storage"],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "options_page": "settings.html",
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "content_scripts": [
      {
        "matches": [
          "*://chatgpt.com/*",
          "*://notebooklm.google.com/*",
          "*://claude.ai/*",
          "*://poe.com/*",
          "*://gemini.google.com/*",
          "*://chat.deepseek.com/*",
          "*://x.com/i/grok*",
          "*://grok.com/*"
        ],
          "js": ["inputBoxHandler.js", "content.js"],
          "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["icons/*.png","icon128.png", "icons/*"], 
        "matches": ["<all_urls>"]
      }
    ]
}
  
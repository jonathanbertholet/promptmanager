{
    "manifest_version": 3,
    "name": "Open Prompt Manager",
    "version": "2.1.3",
    "description": "Fully Open Source Prompt Manager for ChatGPT, Claude, Gemini, Grok, and more.",
    "permissions": [
        "sidePanel",
        "storage",
        "tabs",
        "scripting",
        "activeTab",
        "contextMenus"
    ],
    "side_panel": {
        "default_path": "sidepanel/index.html"
    },
    "icons": {
        "16": "/icons/icon16.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "action": {
        "default_title": "Click to open panel",
        "default_icon": {
            "16": "/icons/icon16.png",
            "48": "/icons/icon48.png",
            "128": "/icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "host_permissions": [],
    "optional_host_permissions": [
        "*://chatgpt.com/*",
        "*://notebooklm.google.com/*",
        "*://claude.ai/*",
        "*://poe.com/*",
        "*://gemini.google.com/*",
        "*://chat.deepseek.com/*",
        "*://x.com/i/grok*",
        "*://grok.com/*",
        "*://copilot.microsoft.com/*",
        "*://apps.abacus.ai/chatllm/*",
        "*://aistudio.google.com/*",
        "*://www.perplexity.ai/*",
        "*://lmarena.ai/*",
        "*://chat.qwen.ai/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*",
                "changelog.html",
                "info.html",
                "promptStorage.js",
                "utils.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
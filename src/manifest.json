{
    "manifest_version": 3,
    "name": "Open Prompt Manager BETA",
    "version": "2.5.2",
    "description": "THIS EXTENSION IS FOR BETA TESTING.",
    "permissions": [
        "sidePanel",
        "storage",
        "tabs",
        "scripting",
        "activeTab",
        "contextMenus"
    ],
    "side_panel": {
        "default_path": "sidepanel/index.html"
    },
    "icons": {
        "16": "/icons/icon16.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "action": {
        "default_title": "Open Sidebar",
        "default_icon": {
            "16": "/icons/icon16.png",
            "48": "/icons/icon48.png",
            "128": "/icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "host_permissions": [],
    "optional_host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*",
                "changelog.html",
                "info.html",
                "promptStorage.js",
                "utils.js",
                "llm_providers.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}